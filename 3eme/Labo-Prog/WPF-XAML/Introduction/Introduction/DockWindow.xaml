        mc:Ignorable="d"
        Title="Dock Panel" Height="450" Width="800">
    <DockPanel>
        <!-- Permet d'ancrer des élements -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Fichier"></MenuItem>
