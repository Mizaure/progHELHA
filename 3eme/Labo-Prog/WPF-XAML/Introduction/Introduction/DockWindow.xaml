            </ToolBarPanel>
        </ToolBar>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <Label x:Name="TimeLabel">Test</Label>
            </StatusBarItem>
        </StatusBar>

        <StackPanel Orientation="Horizontal">
            <Image Source="C:\Users\riche\Documents\progHELHA\3eme\Labo Prog\WPF-XAML\Introduction\Introduction\resources\AverySims.jpg" Height="250" Width="250"></Image>
