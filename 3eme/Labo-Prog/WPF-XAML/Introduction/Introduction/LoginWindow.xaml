<Window x:Class="Introduction.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Introduction"
        mc:Ignorable="d"
        Title="Login Form" Height="200" Width="400">
    
    <Border BorderBrush="Black" BorderThickness="2" Background="DarkGray" Height="150" Width="380">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label MinWidth="120">Nom: </Label>
                <TextBox x:Name="UsernameTB" MinWidth="200" VerticalContentAlignment="Center"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label MinWidth="120">Mot de passe: </Label>
                <PasswordBox x:Name="passwordTB" MinWidth="200" VerticalContentAlignment="Center"></PasswordBox>
            </StackPanel>
            <Button x:Name="SendBtn" Click="SendBtn_Click" HorizontalAlignment="Center" Margin="5" Padding="5" MinWidth="325">Envoyer</Button>
        </StackPanel>
    </Border>
</Window>
